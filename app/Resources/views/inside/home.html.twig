{% extends 'base.html.twig' %}

{% block body %}

	<div class="container-fluid" style="background-color: rgb(255, 102, 0);">
        {% if app.request.get('_route') == "homepage" %}
    		<h4>Most recent topics</h4>
        {% elseif app.request.get('_route') == "top_rated" %}
    		<h4>Top rated topics</h4>
        {% endif %}
    </div>
    <div class="container-fluid" style="background-color: #f6f6ef">
	    {% for topic in topics %}
	        <div style="padding-top: 8px;padding-left: 8px;padding-right: 8px;padding-bottom: 4px;" class="container">
	        	<div class="row">
	        		{{ loop.index }}.<a href="/topic/{{ topic.id }}">{{ topic.title }}</a>
	        	</div>
	        	<div class="row">
	        		{{ topic.getUpvotesCount() }} points by {{ topic.user.email }} | {{ topic.createdAt|date('Y-m-d') }} | {{ topic.getCommentsCount() }} comments
	        	</div>

	        </div>
	    {% endfor %}
	</div>
<div class="navigation">
    {{ knp_pagination_render(topics) }}
</div>

{% endblock %}
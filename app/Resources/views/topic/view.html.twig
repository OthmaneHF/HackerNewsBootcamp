{% extends 'base.html.twig' %}

{% block body %}

    <div style="padding-bottom: 5px; background-color: rgb(255, 102, 0);" class="container-fluid">
    	<div style="display: flex; align-items: center;"class="row">
    		<div class="col-sm-11">
    			<h4>{{ topic.title }}</h4>
    			{{ topic.getUpvotesCount() }} points by {{ topic.user.email }} | {{ topic.createdAt|date('Y-m-d') }} | {{ topic.getCommentsCount() }} comments
    		</div>
		    <div class="col-sm-1">
		    	<a href="/topic/upvote/{{ topic.id }}" class="btn btn-sm btn-success">Upvote</a>
		    </div>
    	</div>
    </div>
    <div class="container-fluid" style="padding: 15px; background-color: #f6f6ef">
    	{{ topic.message }}
	</div>

	<div style="margin-top: 15px;" class="text-center">
		<a href="/topic/{{ topic.id }}/comment" class="btn btn-primary">Add a new comment</a>
	</div>

	<h4 style="margin-top: 15px;">Comments</h4>


    <div class="container-fluid" style="background-color: #f6f6ef">
    	{% for comment in topic.comments %}
    		
    		<div style="padding-top: 8px; padding-left: 8px; padding-right: 8px; padding-bottom: 6px; background-color: #f6f6ef" class="container-fluid">	
	        	<div class="row">
	        		{{ comment.user.email }} | {{ comment.createdAt|date('Y-m-d') }}
	        	</div>
	        	<div class="row">
	        		<p>{{ comment.message }}</p>
	        	</div>
	        </div>
    	{% endfor %} 
    </div>  

{% endblock %}